<div class="content">
    <%= form_for @upload, html: { multipart: true, class: "dropzone", id: "my-dropzone" } do |f| %>

        <div class="dz-message needsclick">
            <h3>Drop file here</h3> ro
            <strong>click</strong> to upload
        </div>

        <div class="fallback">
            <%= f.file_field :image %>
